// Place your settings in this file to overwrite the default settings
{
    // Files opened by search are not sticky tabs by default
    "workbench.editor.enablePreview": true,
    // Files opened by command-p are sticky tabs by default
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.tabSize": 2,
    "window.zoomLevel": 0,
    "editor.rulers": [80],
    "editor.renderLineHighlight": "all",
    "workbench.colorTheme": "rainbow",
    "editor.folding": false,
    "eslint.nodePath": "./node_modules/.bin/",
    "editor.minimap.enabled": false,

    // Not great that these are enbaled by default
    "git.autofetch": false,
    "git.autorefresh": false,

    "indentRainbow.error_color": "rgba(0,0,0,0)"
  }